textarea{
  border: 0.5px solid #a1a9b5;      /* 黑色实线边框，宽度2px */
  border-radius: 10rpx;        /* 圆角 */
  padding: 20rpx;              /* 内边距 */
  background: #fff;
  margin-bottom: 80rpx;   
}

.container {
  display: flex;
  /* 垂直方向排列 */
  flex-direction: column;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
  justify-content: center;
  /* 占满整个屏幕高度 */
  height: 100vh;
  width: 100%;
  /* 按钮之间的间距 */
  gap: 30rpx;
  /* 页面背景色 */
  background-color: #f5f5f5;
  padding: 0;
  box-sizing: border-box;
}

.btn {
  /* 按钮宽度 */
  width: 600rpx !important;
  /* 按钮高度 */
  height: 300rpx;
  /* 文字大小 */
  font-size: 50rpx;
  /* 文字颜色 */
  color: white;
  /* 去除默认边框 */
  border: none;
  /* 圆角 */
  border-radius: 20rpx;
  /* 文字居中核心样式 */
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;     /* 垂直居中 */
}

.btn-top {
  /* 上方按钮颜色 */
  background-color: #07C160;
}

.btn-bottom {
  /* 下方按钮颜色 */
  background-color: #1677FF;
}


.modal-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.modal-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 600rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.modal-title {
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.modal-switch-btn{
  font-size: 30rpx;
  color: #a9a9ae;
  margin-bottom: 50rpx;
}
.upload-btn {
  margin-bottom: 80rpx;
  background: #07C160;
  color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
}
.preview-img {
  max-width: 90%;
  max-height: 300rpx;
  display: block;
  margin-bottom: 80rpx;
  border-radius: 10rpx;
  object-fit: contain;
}
.modal-actions {
  display: flex;
  gap: 30rpx;
  width: 500rpx;
}
.modal-btn {
  background: #1677FF;
  color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
